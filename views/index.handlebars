<h1>Eat-Da-Burger!</h1>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <p>{{burger_name}}<button class="devour-btn" data-id="{{this.id}}">Devour!</button></p>
    {{/unless}}
  {{/each}}
</ul>

<br>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <p>{{burger_name}}<button class="delete-btn" data-id="{{this.id}}"><i class="fas fa-trash"></i></button></p>
    {{/if}}
  {{/each}}
</ul>

<form class="create-form">

  <div class="form-group">
    <label for="burger-input">Burger name:</label>
    <input type="text" id="burger-input" name="name">
  </div>

  <button type="submit">Add burger</button>

</form>